nextflow_process {

    name "Test FLYE module"
    script "../../../modules/local/flye/main.nf"
    process "FLYE"

    tag "modules"
    tag "modules_local"
    tag "flye"

    test("FLYE - nanopore assembly - stub") {

        tag "stub"

        options "-stub"

        when {
            process {
                """
                input[0] = [
                    [ id:'test' ],
                    [ file('test.fastq.gz') ]
                ]
                input[1] = 'nano-hq'
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert process.out.fasta },
                { assert process.out.gfa },
                { assert process.out.versions }
            )
        }

    }

}
