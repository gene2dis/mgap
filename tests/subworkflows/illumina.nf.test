nextflow_workflow {

    name "Test ILLUMINA subworkflow"
    script "../../subworkflows/local/illumina.nf"
    workflow "ILLUMINA"

    tag "subworkflows"
    tag "illumina"

    test("ILLUMINA - paired-end reads - stub") {

        tag "stub"

        options "-stub"

        when {
            params {
                seq_type        = "illumina"
                run_kraken2     = false
                adjust_coverage = false
                outdir          = "$outputDir"
            }
            workflow {
                """
                input[0] = Channel.of([
                    [ id:'test', single_end:false ],
                    [ file(params.test_data['sarscov2']['illumina']['test_1_fastq_gz'], checkIfExists: true),
                      file(params.test_data['sarscov2']['illumina']['test_2_fastq_gz'], checkIfExists: true) ]
                ])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert workflow.out.assembly }
            )
        }

    }

}
