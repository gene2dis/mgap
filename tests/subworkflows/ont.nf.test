nextflow_workflow {

    name "Test ONT subworkflow"
    script "../../subworkflows/local/ont.nf"
    workflow "ONT"

    tag "subworkflows"
    tag "ont"

    test("ONT - long reads - stub") {

        tag "stub"

        options "-stub"

        when {
            params {
                seq_type        = "ont"
                flye_mode       = "nano-hq"
                run_kraken2     = false
                adjust_coverage = false
                outdir          = "$outputDir"
            }
            workflow {
                """
                input[0] = Channel.of([
                    [ id:'test' ],
                    [ file(params.test_data['sarscov2']['nanopore']['test_fastq_gz'], checkIfExists: true) ]
                ])
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert workflow.out.assembly }
            )
        }

    }

}
